{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.39.26.7824",
      "templateHash": "11119616006424345302"
    }
  },
  "parameters": {
    "name": {
      "type": "string",
      "metadata": {
        "description": "Container App name"
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location for Container App"
      }
    },
    "environmentId": {
      "type": "string",
      "metadata": {
        "description": "Container Apps Environment ID"
      }
    },
    "containerRegistryName": {
      "type": "string",
      "metadata": {
        "description": "Container Registry name"
      }
    },
    "imageName": {
      "type": "string",
      "metadata": {
        "description": "Container image name"
      }
    },
    "imageTag": {
      "type": "string",
      "metadata": {
        "description": "Container image tag"
      }
    },
    "keyVaultName": {
      "type": "string",
      "metadata": {
        "description": "Key Vault name for secrets"
      }
    },
    "applicationInsightsConnectionString": {
      "type": "string",
      "metadata": {
        "description": "Application Insights connection string"
      }
    },
    "environmentVariables": {
      "type": "array",
      "metadata": {
        "description": "Environment variables"
      }
    },
    "secrets": {
      "type": "array",
      "defaultValue": [],
      "metadata": {
        "description": "Secrets configuration - array of objects with {name, value}"
      }
    },
    "tags": {
      "type": "object",
      "metadata": {
        "description": "Resource tags"
      }
    },
    "minReplicas": {
      "type": "int",
      "defaultValue": 0,
      "metadata": {
        "description": "Minimum replicas"
      }
    },
    "maxReplicas": {
      "type": "int",
      "defaultValue": 3,
      "metadata": {
        "description": "Maximum replicas"
      }
    },
    "enableIngress": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Enable ingress (HTTP/HTTPS endpoints)"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2024-03-01",
      "name": "[parameters('name')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "managedEnvironmentId": "[parameters('environmentId')]",
        "configuration": {
          "activeRevisionsMode": "Single",
          "registries": [
            {
              "server": "[reference(resourceId('Microsoft.ContainerRegistry/registries', parameters('containerRegistryName')), '2023-01-01-preview').loginServer]",
              "username": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', parameters('containerRegistryName')), '2023-01-01-preview').username]",
              "passwordSecretRef": "registry-password"
            }
          ],
          "secrets": "[concat(createArray(createObject('name', 'registry-password', 'value', listCredentials(resourceId('Microsoft.ContainerRegistry/registries', parameters('containerRegistryName')), '2023-01-01-preview').passwords[0].value)), parameters('secrets'))]",
          "ingress": "[if(parameters('enableIngress'), createObject('external', true(), 'targetPort', 8080, 'transport', 'auto', 'allowInsecure', false()), null())]"
        },
        "template": {
          "containers": [
            {
              "name": "[parameters('name')]",
              "image": "[format('{0}/{1}:{2}', reference(resourceId('Microsoft.ContainerRegistry/registries', parameters('containerRegistryName')), '2023-01-01-preview').loginServer, parameters('imageName'), parameters('imageTag'))]",
              "resources": {
                "cpu": "[json('0.5')]",
                "memory": "1Gi"
              },
              "env": "[parameters('environmentVariables')]"
            }
          ],
          "scale": {
            "minReplicas": "[parameters('minReplicas')]",
            "maxReplicas": "[parameters('maxReplicas')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/accessPolicies",
      "apiVersion": "2023-02-01",
      "name": "[format('{0}/{1}', parameters('keyVaultName'), 'add')]",
      "properties": {
        "accessPolicies": [
          {
            "tenantId": "[subscription().tenantId]",
            "objectId": "[reference(resourceId('Microsoft.App/containerApps', parameters('name')), '2024-03-01', 'full').identity.principalId]",
            "permissions": {
              "secrets": [
                "get",
                "list"
              ]
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.App/containerApps', parameters('name'))]"
      ]
    }
  ],
  "outputs": {
    "id": {
      "type": "string",
      "value": "[resourceId('Microsoft.App/containerApps', parameters('name'))]"
    },
    "name": {
      "type": "string",
      "value": "[parameters('name')]"
    },
    "fqdn": {
      "type": "string",
      "value": "[if(parameters('enableIngress'), reference(resourceId('Microsoft.App/containerApps', parameters('name')), '2024-03-01').configuration.ingress.fqdn, '')]"
    },
    "url": {
      "type": "string",
      "value": "[if(parameters('enableIngress'), format('https://{0}', reference(resourceId('Microsoft.App/containerApps', parameters('name')), '2024-03-01').configuration.ingress.fqdn), '')]"
    }
  }
}