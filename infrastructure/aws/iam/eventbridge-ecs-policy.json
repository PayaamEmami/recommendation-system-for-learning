{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "ECSTaskExecution",
            "Effect": "Allow",
            "Action": [
                "ecs:RunTask"
            ],
            "Resource": "arn:aws:ecs:*:*:task-definition/rsl-*"
        },
        {
            "Sid": "PassRole",
            "Effect": "Allow",
            "Action": [
                "iam:PassRole"
            ],
            "Resource": [
                "arn:aws:iam::*:role/rsl-ecs-execution-role",
                "arn:aws:iam::*:role/rsl-ecs-task-role"
            ]
        }
    ]
}
