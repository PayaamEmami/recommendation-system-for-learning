@page "/sources"
@page "/sources/{CategoryFilter}"
@rendermode InteractiveServer
@using Rsl.Web.Services
@using Rsl.Core.Enums
@inject AuthService AuthService
@inject SourceService SourceService
@inject ThemeService ThemeService
@inject NavigationManager Navigation
@implements IDisposable

<PageTitle>@GetPageTitle() - RSL</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h1>@GetPageTitle()</h1>
        <p class="subtitle">Manage your learning resource sources</p>
    </div>

    <div class="feed-filters">
        <a href="/sources" class="filter-button @(string.IsNullOrEmpty(CategoryFilter) ? "active" : "")">
            All Sources
        </a>
        @foreach (var type in Enum.GetValues<ResourceType>())
        {
            var typeName = type.ToString().ToLower();
            <a href="/sources/@typeName" class="filter-button @(CategoryFilter?.Equals(typeName, StringComparison.OrdinalIgnoreCase) == true ? "active" : "")">
                @GetResourceTypeDisplay(type)
            </a>
        }
    </div>

    <div class="content-card">
        <h2>Add New Source</h2>

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="error-message">@_errorMessage</div>
        }

        @if (!string.IsNullOrEmpty(_successMessage))
        {
            <div class="success-message">@_successMessage</div>
        }

        <EditForm Model="@_newSource" OnValidSubmit="HandleAddSource" FormName="addSourceForm">
            <DataAnnotationsValidator />

            <div class="form-row">
                <div class="form-group">
                    <label for="name">Name</label>
                    <InputText id="name" @bind-Value="_newSource.Name" class="form-input" placeholder="ArXiv AI Papers" />
                    <ValidationMessage For="@(() => _newSource.Name)" />
                </div>

                <div class="form-group">
                    <label for="category">Category</label>
                    <InputSelect id="category" @bind-Value="_newSource.Category" class="form-input">
                        <option value="">Select category...</option>
                        @foreach (var type in Enum.GetValues<ResourceType>())
                        {
                            <option value="@type">@GetResourceTypeDisplay(type)</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => _newSource.Category)" />
                </div>
            </div>

            <div class="form-group">
                <label for="url">URL</label>
                <InputText id="url" @bind-Value="_newSource.Url" class="form-input" placeholder="https://example.com/feed" />
                <ValidationMessage For="@(() => _newSource.Url)" />
            </div>

            <div class="form-group">
                <label for="description">Description (optional)</label>
                <InputTextArea id="description" @bind-Value="_newSource.Description" class="form-input" placeholder="A brief description of this source" rows="2" />
            </div>

            <button type="submit" class="btn-primary" disabled="@_isLoading">
                @if (_isLoading)
                {
                    <span>Adding...</span>
                }
                else
                {
                    <span>Add Source</span>
                }
            </button>
        </EditForm>
    </div>

    <div class="content-card">
        <h2>Bulk Import Sources</h2>
        <p class="subtitle">Paste JSON to import multiple sources at once</p>

        <details style="margin-bottom: 1rem; padding: 0.75rem; background: var(--bg-secondary); border-radius: 0.375rem;">
            <summary style="cursor: pointer; font-weight: 600; user-select: none;">Show JSON Format Example</summary>
            <div style="margin-top: 0.75rem; font-family: monospace; font-size: 0.875rem; white-space: pre-wrap; overflow-x: auto;">
{
  "sources": [
    {
      "name": "ArXiv AI Papers",
      "url": "https://arxiv.org/list/cs.AI/recent",
      "category": "Paper",
      "description": "Recent AI papers from ArXiv"
    },
    {
      "name": "3Blue1Brown",
      "url": "https://www.youtube.com/c/3blue1brown",
      "category": "Video",
      "description": "Math and science videos"
    },
    {
      "name": "Paul Graham Essays",
      "url": "http://www.paulgraham.com/articles.html",
      "category": "BlogPost",
      "description": "Essays on startups and tech"
    }
  ]
}
            </div>
        </details>

        @if (!string.IsNullOrEmpty(_bulkImportError))
        {
            <div class="error-message">@_bulkImportError</div>
        }

        @if (!string.IsNullOrEmpty(_bulkImportSuccess))
        {
            <div class="success-message">@_bulkImportSuccess</div>
        }

        <div class="form-group">
            <label for="bulkJson">JSON Input</label>
            <textarea id="bulkJson" @bind="_bulkImportJson" class="form-input" rows="8" placeholder='Paste your JSON here...'></textarea>
        </div>

        <button @onclick="HandleBulkImport" class="btn-primary" disabled="@_isBulkImporting">
            @if (_isBulkImporting)
            {
                <span>Importing...</span>
            }
            else
            {
                <span>Import Sources</span>
            }
        </button>

        @if (_bulkImportResult != null)
        {
            <div style="margin-top: 1rem;">
                <strong>Import Results:</strong>
                <p>âœ“ Imported: @_bulkImportResult.Imported</p>
                <p>âœ— Failed: @_bulkImportResult.Failed</p>
                @if (_bulkImportResult.Errors.Any())
                {
                    <details>
                        <summary>Show Errors</summary>
                        <ul>
                            @foreach (var error in _bulkImportResult.Errors)
                            {
                                <li><strong>@error.Url:</strong> @error.Error</li>
                            }
                        </ul>
                    </details>
                }
            </div>
        }
    </div>

    <div class="content-card">
        <h2>Your Sources</h2>

        @if (_sources == null)
        {
            <p>Loading sources...</p>
        }
        else if (!_filteredSources.Any())
        {
            <div class="empty-state" style="text-align: center; padding: 2rem 1rem; background-color: var(--surface-secondary); border-radius: 0.5rem;">
                <p style="font-size: 1.1rem; margin-bottom: 0.5rem; color: var(--text-primary);">
                    @if (!_sources.Any())
                    {
                        <span>ðŸŽ¯ No sources yet</span>
                    }
                    else
                    {
                        <span>No sources in this category</span>
                    }
                </p>
                <p style="color: var(--text-secondary); margin: 0;">
                    @if (!_sources.Any())
                    {
                        <span>Add your first source above to get started!</span>
                    }
                    else
                    {
                        <span>Try selecting a different category filter</span>
                    }
                </p>
            </div>
        }
        else
        {
            <div class="sources-list">
                @foreach (var source in _filteredSources)
                {
                    <div class="source-item">
                        @if (_editingSourceId == source.Id)
                        {
                            <!-- Edit Form -->
                            <EditForm Model="@_editModel" OnValidSubmit="HandleUpdateSource" FormName="@($"editSourceForm_{source.Id}")">
                                <DataAnnotationsValidator />

                                @if (!string.IsNullOrEmpty(_editErrorMessage))
                                {
                                    <div class="error-message">@_editErrorMessage</div>
                                }

                                <div class="form-group">
                                    <label for="edit-name">Name</label>
                                    <InputText id="edit-name" @bind-Value="_editModel.Name" class="form-input" placeholder="Source name" />
                                    <ValidationMessage For="@(() => _editModel.Name)" />
                                </div>

                                <div class="form-group">
                                    <label for="edit-category">Category</label>
                                    <InputSelect id="edit-category" @bind-Value="_editModel.Category" class="form-input">
                                        @foreach (var type in Enum.GetValues<ResourceType>())
                                        {
                                            <option value="@type">@GetResourceTypeDisplay(type)</option>
                                        }
                                    </InputSelect>
                                    <ValidationMessage For="@(() => _editModel.Category)" />
                                </div>

                                <div class="form-group">
                                    <label for="edit-url">URL</label>
                                    <InputText id="edit-url" @bind-Value="_editModel.Url" class="form-input" placeholder="https://example.com/feed" />
                                    <ValidationMessage For="@(() => _editModel.Url)" />
                                </div>

                                <div class="form-group">
                                    <label for="edit-description">Description (optional)</label>
                                    <InputTextArea id="edit-description" @bind-Value="_editModel.Description" class="form-input" placeholder="A brief description" rows="2" />
                                </div>

                                <div class="source-actions">
                                    <button type="submit" class="btn-primary" disabled="@_isLoading">
                                        @if (_isLoading)
                                        {
                                            <span>Saving...</span>
                                        }
                                        else
                                        {
                                            <span>Save Changes</span>
                                        }
                                    </button>
                                    <button type="button" @onclick="CancelEdit" class="btn-secondary">Cancel</button>
                                </div>
                            </EditForm>
                        }
                        else
                        {
                            <!-- View Mode -->
                            <div class="source-header">
                                <h3>@source.Name</h3>
                                <span class="source-badge @(source.IsActive ? "active" : "inactive")">
                                    @(source.IsActive ? "Active" : "Inactive")
                                </span>
                            </div>
                            <div class="source-details">
                                <span class="source-category">@GetResourceTypeDisplay(source.Category)</span>
                                <a href="@source.Url" target="_blank" class="source-url">@source.Url</a>
                            </div>
                            @if (!string.IsNullOrEmpty(source.Description))
                            {
                                <p class="source-description">@source.Description</p>
                            }
                            <div class="source-actions">
                                <button @onclick="() => StartEdit(source)" class="btn-secondary">Edit</button>
                                <button @onclick="() => ToggleSource(source.Id)" class="btn-secondary">
                                    @(source.IsActive ? "Deactivate" : "Activate")
                                </button>
                                <button @onclick="() => DeleteSource(source.Id)" class="btn-danger">Delete</button>
                            </div>
                        }
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public string? CategoryFilter { get; set; }

    private List<SourceItem>? _sources;
    private List<SourceItem> _filteredSources = new();
    private AddSourceModel _newSource = new();
    private EditSourceModel _editModel = new();
    private string? _errorMessage;
    private string? _successMessage;
    private string? _editErrorMessage;
    private bool _isLoading;
    private Guid? _editingSourceId;

    // Bulk import fields
    private string _bulkImportJson = "";
    private string? _bulkImportError;
    private string? _bulkImportSuccess;
    private bool _isBulkImporting;
    private Rsl.Web.Services.BulkImportResultModel? _bulkImportResult;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await ThemeService.InitializeAsync();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        if (!AuthService.CurrentState.IsAuthenticated)
        {
            Navigation.NavigateTo("/login");
            return;
        }

        AuthService.OnAuthStateChanged += HandleAuthStateChanged;
        await LoadSources();
    }

    protected override async Task OnParametersSetAsync()
    {
        ApplyFilter();
    }

    private async Task LoadSources()
    {
        _sources = await SourceService.GetUserSourcesAsync();
        ApplyFilter();
    }

    private void ApplyFilter()
    {
        if (_sources == null)
        {
            _filteredSources = new();
            return;
        }

        if (string.IsNullOrEmpty(CategoryFilter))
        {
            _filteredSources = _sources;
        }
        else
        {
            if (Enum.TryParse<ResourceType>(CategoryFilter, ignoreCase: true, out var parsedType))
            {
                _filteredSources = _sources.Where(s => s.Category == parsedType).ToList();
            }
            else
            {
                _filteredSources = _sources;
            }
        }
    }

    private async Task HandleAddSource()
    {
        _isLoading = true;
        _errorMessage = null;
        _successMessage = null;

        var success = await SourceService.AddSourceAsync(
            _newSource.Name,
            _newSource.Url,
            _newSource.Category,
            _newSource.Description
        );

        if (success)
        {
            _successMessage = "Source added successfully!";
            _newSource = new AddSourceModel();
            await LoadSources();
        }
        else
        {
            _errorMessage = "Failed to add source. Please try again.";
        }

        _isLoading = false;
    }

    private void StartEdit(SourceItem source)
    {
        _editingSourceId = source.Id;
        _editModel = new EditSourceModel
        {
            Name = source.Name,
            Url = source.Url,
            Category = source.Category,
            Description = source.Description
        };
        _editErrorMessage = null;
    }

    private void CancelEdit()
    {
        _editingSourceId = null;
        _editModel = new EditSourceModel();
        _editErrorMessage = null;
    }

    private async Task HandleUpdateSource()
    {
        if (!_editingSourceId.HasValue)
            return;

        _isLoading = true;
        _editErrorMessage = null;

        var success = await SourceService.UpdateSourceAsync(
            _editingSourceId.Value,
            _editModel.Name,
            _editModel.Url,
            _editModel.Category,
            _editModel.Description
        );

        if (success)
        {
            _editingSourceId = null;
            _editModel = new EditSourceModel();
            await LoadSources();
        }
        else
        {
            _editErrorMessage = "Failed to update source. Please try again.";
        }

        _isLoading = false;
    }

    private async Task ToggleSource(Guid sourceId)
    {
        await SourceService.ToggleSourceActiveAsync(sourceId);
        await LoadSources();
    }

    private async Task DeleteSource(Guid sourceId)
    {
        await SourceService.DeleteSourceAsync(sourceId);
        await LoadSources();
    }

    private void HandleAuthStateChanged()
    {
        if (!AuthService.CurrentState.IsAuthenticated)
        {
            Navigation.NavigateTo("/login");
        }
    }

    private string GetPageTitle()
    {
        if (string.IsNullOrEmpty(CategoryFilter))
            return "My Sources";

        if (Enum.TryParse<ResourceType>(CategoryFilter, ignoreCase: true, out var type))
        {
            return $"{GetResourceTypeDisplay(type)} Sources";
        }

        return "My Sources";
    }

    private static string GetResourceTypeDisplay(ResourceType type)
    {
        return type switch
        {
            ResourceType.Paper => "Papers",
            ResourceType.Video => "Videos",
            ResourceType.BlogPost => "Blogs",
            _ => type.ToString()
        };
    }

    private async Task HandleBulkImport()
    {
        _isBulkImporting = true;
        _bulkImportError = null;
        _bulkImportSuccess = null;
        _bulkImportResult = null;

        try
        {
            var result = await SourceService.BulkImportSourcesAsync(_bulkImportJson);
            _bulkImportResult = result;

            if (result.Imported > 0)
            {
                _bulkImportSuccess = $"Successfully imported {result.Imported} source(s)";
                await LoadSources();

                // Clear the textarea on successful import
                if (result.Failed == 0)
                {
                    _bulkImportJson = "";
                }
            }

            if (result.Failed > 0)
            {
                _bulkImportError = $"{result.Failed} source(s) failed to import. See details below.";
            }
        }
        catch (Exception ex)
        {
            _bulkImportError = $"Import failed: {ex.Message}";
        }
        finally
        {
            _isBulkImporting = false;
        }
    }

    public void Dispose()
    {
        AuthService.OnAuthStateChanged -= HandleAuthStateChanged;
    }

    private class AddSourceModel
    {
        [Required(ErrorMessage = "Name is required")]
        public string Name { get; set; } = string.Empty;

        [Required(ErrorMessage = "URL is required")]
        [Url(ErrorMessage = "Please enter a valid URL")]
        public string Url { get; set; } = string.Empty;

        [Required(ErrorMessage = "Category is required")]
        public ResourceType Category { get; set; }

        public string? Description { get; set; }
    }

    private class EditSourceModel
    {
        [Required(ErrorMessage = "Name is required")]
        public string Name { get; set; } = string.Empty;

        [Required(ErrorMessage = "URL is required")]
        [Url(ErrorMessage = "Please enter a valid URL")]
        public string Url { get; set; } = string.Empty;

        [Required(ErrorMessage = "Category is required")]
        public ResourceType Category { get; set; }

        public string? Description { get; set; }
    }
}
